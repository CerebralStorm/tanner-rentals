<!-- Fixed navbar -->
<div class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}Tanner Rentals{{/link-to}}
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          {{#link-li}}
            {{#link-to 'index'}}Home{{/link-to}}
          {{/link-li}}
          {{#link-li}}
            {{#link-to 'user'}}Profile{{/link-to}}
          {{/link-li}}
          {{#link-li}}
            {{#link-to 'contact'}}Contact{{/link-to}}
          {{/link-li}}
        </ul>
        {{#if currentUser}}
          <ul class="nav navbar-nav pull-right">
            <li><p class="navbar-text">Logged in as {{currentUser.email}}</p></li>
            {{#link-li}}
              {{#link-to 'settings'}}Settings{{/link-to}}
            {{/link-li}}
            <li class="divider"></li>
            <li>
              <a href="/users/sign_out" data-method="delete" id='sign_out_button'>
                <i class="fa fa-sign-out"></i> Logout
              </a>
            </li>
          </ul>
        {{else}}
          <ul class="nav navbar-nav pull-right">
            {{#link-li}}
              {{#link-to "sessions.new"}}Sign In{{/link-to}}
            {{/link-li}}
          </ul>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div id="ember-body" class="container">
  {{view TannerRentals.FlashView model=TannerRentals.flash}}
  {{outlet}}
</div><!-- /container -->

<!-- Footer -->
<footer id="main-footer">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="list-inline">
          <li>
            {{#link-to 'index'}}Profile{{/link-to}}
          </li>
          <li class="footer-menu-divider">&sdot;</li>
          {{#link-li}}
            {{#link-to 'user'}}Profile{{/link-to}}
          {{/link-li}}
          <li class="footer-menu-divider">&sdot;</li>
          <li>
            {{#link-to 'contact'}}Contact{{/link-to}}
          </li>
        </ul>
        <p class="copyright text-muted small">Copyright &copy; Tanner Rentals 2014. All Rights Reserved</p>
      </div>
    </div>
  </div>
</footer>