<div class="row">
  <div class="col-md-4 col-md-offset-4 well well-lg">
    <h2 class="text-center">Sign In</h2>
    <form role="form">
      <div class="form-group">
        <label for="InputEmail">Email address</label>
        {{input type="email" value=email class="form-control" placeholder="Enter email"}}
      </div>
      <div class="form-group">
        <label for="InputPassword">Password</label>
        {{input type="password" value=password class="form-control" placeholder="Password"}}
      </div>

      <button type="submit" {{action "signIn"}} class="btn btn-default">Sign In</button>
    </form>
  </div>
</div>
