<form role="form">
  <div class="form-group">
    <label for="InputEmail">Email address</label>
    {{input type="email" value=email class="form-control" placeholder="Enter email"}}
  </div>
  <div class="form-group">
    <label for="InputPassword">Password</label>
    {{input type="password" value=password class="form-control" placeholder="Password"}}
  </div>

  <button type="submit" {{action "signIn"}} class="btn btn-default">Sign In</button>
</form>